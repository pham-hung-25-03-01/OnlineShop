@model Model.EF.Contact
@{
    ViewBag.Title = "Thông tin liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thông tin liên hệ</h1>
                <nav class="d-flex align-items-center">
                    <a href="@Url.Action("trang-chu", "Main")">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Thông tin liên hệ</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Contact Area =================-->
<section class="contact_area section_gap_bottom">
    <div class="container">
        <div class="card shadow p-3 mt-5">
            @Html.Raw(Model.LocationOnGoogleMap.Replace("<iframe", "<iframe style=\"width: 100%; border: none;\" "))
        </div>
        <div class="row mt-5">
            <div class="col-lg-3">
                <div class="contact_info">
                    <div class="info_item">
                        <i class="lnr lnr-home"></i>
                        <h6>@Model.Address</h6>
                        <p>Cửa hàng chính</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-phone-handset"></i>
                        <h6><a href="tel:@Model.Phone">@Model.Phone</a></h6>
                        <p>Từ thứ 2 ➝ thứ 7, 7:00 ➝ 20:00</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-envelope"></i>
                        <h6><a href="mailto:@Model.Email">@Model.Email</a></h6>
                        <p>Gửi cho chúng tôi câu hỏi của bạn bất cứ lúc nào!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <form class="row contact_form" id="contactForm">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Họ tên">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="subject" name="subject" placeholder="Tiêu đề">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea class="form-control" name="message" id="message" rows="1" placeholder="Nội dung"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button style="line-height: 38px;" type="submit" value="submit" class="primary-btn">Gửi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!--================Contact Area =================-->